#include <stdio.h>

int main(){
    //Local variables to hold 5 number, i for looping counter and sum for the first and last nubmer
    int num[5];
    int i = 0;
    int sum = 0; 
    
    //While loop condition using i as loop counter
    while ( i < 5 ) {
        printf ("Enter a number %d:", i + 1);
        scanf ("%d", &num[i]);
        i++;
    }
    //Formula
    sum = num[0] + num[4];
    
    //Output
    printf("Sum of the first and last number is: %d\n", sum);
    return 0;
    }
